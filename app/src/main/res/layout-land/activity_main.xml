<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nichoshi.simplenewsapp.MainActivity"
    >



    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:name="com.example.nichoshi.simplenewsapp.newsTitleFragment"
        android:id="@+id/newsTitleFragment"
        android:layout_weight="1"/>



    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:id="@+id/contentFrameLayout"
        >

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.example.nichoshi.simplenewsapp.newsContentFragment"
            android:id="@+id/newsContentFragment"/>

    </FrameLayout>





</LinearLayout>